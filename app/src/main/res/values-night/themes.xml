<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Base.Theme.Weather" parent="Theme.Material3.DayNight.NoActionBar">
		<!-- Customize your dark theme here. -->
		<item name="colorPrimary">@color/white</item>
		<item name="colorOnPrimary">@color/secondary_day_color</item>
		<item name="colorSecondary">@color/main_night_color</item>
		<item name="colorOnSecondary">@color/secondary_day_color</item>
	</style>
	
	<style name="simple_text_style" parent="Widget.AppCompat.TextView">
		<item name="fontFamily">sans-serif-light</item>
		<item name="android:textAlignment">center</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">?colorOnPrimary</item>
		<item name="android:textStyle">bold</item>
	
	</style>
</resources>